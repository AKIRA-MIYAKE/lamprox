{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "declaration": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "lib": [ "es6" ],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "exclude": [
    "../node_modules",
    "!../node_modules/@types"
  ]
}